{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":dependencyDashboard",
    ":semanticCommits",
    ":separateMajorReleases"
  ],
  "packageRules": [
    {
      "description": "Group all non-major dependencies together",
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "groupName": "all non-major dependencies",
      "groupSlug": "all-minor-patch"
    },
    {
      "description": "Group heavy ML/AI dependencies together",
      "matchPackagePatterns": [
        "^@huggingface/",
        "^@pinecone-database/",
        "^chromadb",
        "^weaviate-",
        "^@opentelemetry/"
      ],
      "groupName": "heavy ML/AI dependencies",
      "groupSlug": "heavy-deps",
      "schedule": ["before 3am on Monday"]
    },
    {
      "description": "Group OpenAI and core AI packages",
      "matchPackageNames": ["openai"],
      "groupName": "core AI packages",
      "schedule": ["before 3am on Monday"]
    },
    {
      "description": "Automerge non-major updates for dev dependencies",
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["patch"],
      "automerge": true
    },
    {
      "description": "Group GitHub Actions updates",
      "matchManagers": ["github-actions"],
      "groupName": "GitHub Actions",
      "groupSlug": "github-actions",
      "automerge": true,
      "schedule": ["before 3am on Monday"]
    },
    {
      "description": "Disable major updates for React (breaking changes)",
      "matchPackageNames": ["react", "react-dom"],
      "matchUpdateTypes": ["major"],
      "enabled": false
    }
  ],
  "schedule": ["before 3am on Monday"],
  "timezone": "America/New_York",
  "labels": ["dependencies"],
  "assignees": ["@lippytm"],
  "reviewers": ["@lippytm"],
  "prConcurrentLimit": 5,
  "prHourlyLimit": 2,
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["security"]
  },
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 3am on the first day of the month"]
  }
}
